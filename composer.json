{
    "name": "propellocloud/propello-php-sdk",
    "description": "PHP SDK for easy integration with Propello Clouds API V3",
    "keywords": [
        "PropelloCloud",
        "propello-php-sdk"
    ],
    "homepage": "https://github.com/propellocloud/propello-php-sdk",
    "license": "MIT",
    "authors": [
        {
            "name": "Richard Porter",
            "email": "richardporter@propellocloud.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.2|^8.3|^8.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.3.2",
        "laravel/pint": "^1.0",
        "spatie/ray": "^1.28"
    },
    "autoload": {
        "psr-4": {
            "PropelloCloud\\Propello\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "PropelloCloud\\Propello\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
            "test-coverage": "vendor/bin/phpunit --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {

            "phpstan/extension-installer": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
